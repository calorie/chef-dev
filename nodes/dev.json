{
  "user": "yuu",
  "group": "yuu",
  "run_list": ["role[dev]"],
  "platform": "ubuntu",
  "tz": "Asia/Tokyo",
  "ubuntu": {
    "mirror_site_url": "http://ftp.riken.jp/Linux/ubuntu/",
    "version": "14.04",
    "need_deb_src": true,
    "need_update": false
  },
  "rbenv": {
    "install_pkgs": ["libssl-dev", "git-core", "grep"],
    "user_home_root": "/home",
    "git_ref": "master",
    "user_installs": [
      {
        "user": "yuu",
        "group": "yuu",
        "rubies": [
          {
            "name": "2.3.1",
            "environment": {
              "RUBY_CONFIGURE_OPTS": "--with-openssl-dir=/usr --with-readline-dir=/usr/include/readline --enable-shared"
            }
          }
        ],
        "global": "2.3.1",
        "gems": {
          "2.3.1": [
            { "name": "bundler" },
            { "name": "rubygems-update" },
            { "name": "pry" },
            { "name": "tmuxinator" },
            { "name": "vvm-rb" },
            { "name": "refe2" },
            { "name": "hub" }
          ]
        },
        "plugins": [
          {
            "name": "ruby-build",
            "git_ref": "v20160602",
            "git_url": "https://github.com/rbenv/ruby-build.git"
          },
          {
            "name": "rbenv-update",
            "git_url": "https://github.com/rkh/rbenv-update.git"
          },
          {
            "name": "rbenv-default-gems",
            "git_ref": "v1.0.0",
            "git_url": "https://github.com/rbenv/rbenv-default-gems.git"
          },
          {
            "name": "rbenv-binstubs",
            "git_ref": "v1.5",
            "git_url": "https://github.com/ianheggie/rbenv-binstubs.git"
          },
          {
            "name": "rbenv-ctags",
            "git_ref": "v1.0.1",
            "git_url": "https://github.com/tpope/rbenv-ctags.git"
          }
        ]
      }
    ]
  },
  "readline": {
    "packages": ["libreadline-dev", "libreadline6"]
  },
  "authorization": {
    "sudo": {
      "groups": ["admin", "sudo", "yuu"],
      "users": ["yuu"],
      "passwordless": "true",
      "sudoers_defaults": [
        "env_reset",
        "mail_badpass",
        "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\"",
        "timestamp_timeout = 1440"
      ]
    }
  },
  "vvm-rb": {
    "version": "latest",
    "opts": [
      "--enable-multibyte",
      "--with-features=big",
      "--enable-fontset",
      "--enable-xim",
      "--enable-rubyinterp",
      "--enable-luainterp",
      "--with-lua-prefix=/usr",
      "--enable-pythoninterp",
      "--disable-python3interp",
      "--disable-mzschemeinterp",
      "--disable-tclinterp",
      "--disable-darwin",
      "--disable-selinux",
      "--disable-netbeans",
      "--disable-gtktest",
      "--disable-gpm",
      "--disable-sysmouse",
      "--disable-xsmp",
      "--disable-xsmp-interact",
      "--without-x",
      "--disable-nls",
      "--disable-gui",
      "--disable-cscope",
      "--disable-workshop",
      "--disable-sniff",
      "--disable-hangulinput",
      "--disable-largefile",
      "--with-modified-by=\"Yuu Shigetani\"",
      "--with-compiledby=\"Yuu Shigetani\""
    ]
  },
  "sysv-rc-conf": {
    "off": [
      "bluetooth",
      "dns-clean",
      "pppd-dns",
      "speech-dispatcher",
      "usplash",
      "saned"
    ]
  },
  "docker": {
    "host": "tcp://127.0.0.1:4243"
  },
  "direnv": {
    "version": "v2.9.0"
  },
  "dmenu": {
    "version": "4.6"
  },
  "gecode": {
    "version": "3.7.3"
  },
  "packer": {
    "version": "0.10.1"
  },
  "peco": {
    "version": "v0.4.2"
  },
  "vagrant": {
    "version": "1.8.5"
  }
}
