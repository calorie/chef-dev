{
  "run_list": ["role[dev]"],
  "platform": "ubuntu",
  "tz": "Asia/Tokyo",
  "rbenv": {
    "install_pkgs": ["libssl-dev", "git-core", "grep"],
    "user_home_root": "/home",
    "user_installs": [
      {
        "user": "yuu",
        "group": "yuu",
        "rubies": ["2.1.1"],
        "global": "2.1.1",
        "gems": {
          "2.1.1": [
            { "name": "bundler" },
            { "name": "rubygems-update" },
            { "name": "pry" },
            { "name": "tmuxinator" },
            { "name": "vvm-rb" },
            { "name": "refe2" }
          ]
        },
        "plugins": [
          {
            "name": "rbenv-update",
            "git_url": "https://github.com/rkh/rbenv-update.git"
          },
          {
            "name": "rbenv-gem-rehash",
            "git_url": "https://github.com/sstephenson/rbenv-gem-rehash.git"
          },
          {
            "name": "rbenv-default-gems",
            "git_url": "https://github.com/sstephenson/rbenv-default-gems.git"
          },
          {
            "name": "rbenv-binstubs",
            "git_url": "https://github.com/ianheggie/rbenv-binstubs.git"
          },
          {
            "name": "rbenv-ctags",
            "git_url": "https://github.com/tpope/rbenv-ctags.git"
          }
        ]
      }
    ]
  },
  "readline": {
    "packages": ["libreadline-dev", "libreadline5"]
  },
  "authorization": {
    "sudo": {
      "groups": ["admin", "sudo", "yuu"],
      "users": ["yuu"],
      "passwordless": "true",
      "sudoers_defaults": [
        "env_reset",
        "mail_badpass",
        "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\"",
        "timestamp_timeout = 1440"
      ]
    }
  },
  "chsh": {
    "user": "yuu"
  },
  "dotfiles": {
    "user": "yuu"
  },
  "vvm-rb": {
    "version": "latest",
    "opts": [
      "--enable-multibyte",
      "--with-features=huge",
      "--enable-fontset",
      "--disable-selinux",
      "--enable-pythoninterp",
      "--enable-rubyinterp",
      "--enable-xim",
      "--enable-luainterp",
      "--with-lua-prefix=/usr"
    ]
  }
}
