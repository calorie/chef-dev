{
  "user": "vagrant",
  "group": "vagrant",
  "run_list": ["role[dev]"],
  "platform": "ubuntu",
  "tz": "Asia/Tokyo",
  "ubuntu": {
    "mirror_site_url": "http://ftp.tsukuba.wide.ad.jp/Linux/ubuntu",
    "version": "14.04",
    "need_deb_src": true,
    "need_update": false
  },
  "rbenv": {
    "install_pkgs": ["libssl-dev", "git-core", "grep"],
    "user_home_root": "/home",
    "user_installs": [
      {
        "user": "vagrant",
        "group": "vagrant",
        "rubies": [
          {
            "name": "2.1.1",
            "environment": {
              "RUBY_CONFIGURE_OPTS": "--with-openssl-dir=/usr --with-readline-dir=/usr/include/readline --enable-shared"
            },
            "patch_url": "https://gist.github.com/mislav/a18b9d7f0dc5b9efc162.txt"
          }
        ],
        "global": "2.1.1",
        "gems": {
          "2.1.1": [
            { "name": "bundler" },
            { "name": "rubygems-update" },
            { "name": "pry" },
            { "name": "tmuxinator" },
            { "name": "vvm-rb" },
            { "name": "refe2" }
          ]
        },
        "plugins": [
          {
            "name": "ruby-build",
            "git_url": "https://github.com/sstephenson/ruby-build.git"
          },
          {
            "name": "rbenv-update",
            "git_url": "https://github.com/rkh/rbenv-update.git"
          },
          {
            "name": "rbenv-gem-rehash",
            "git_url": "https://github.com/sstephenson/rbenv-gem-rehash.git"
          },
          {
            "name": "rbenv-default-gems",
            "git_url": "https://github.com/sstephenson/rbenv-default-gems.git"
          },
          {
            "name": "rbenv-binstubs",
            "git_url": "https://github.com/ianheggie/rbenv-binstubs.git"
          },
          {
            "name": "rbenv-ctags",
            "git_url": "https://github.com/tpope/rbenv-ctags.git"
          }
        ]
      }
    ]
  },
  "readline": {
    "packages": ["libreadline-dev", "libreadline6"]
  },
  "authorization": {
    "sudo": {
      "groups": ["admin", "sudo", "vagrant"],
      "users": ["vagrant"],
      "passwordless": "true",
      "sudoers_defaults": [
        "env_reset",
        "mail_badpass",
        "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\"",
        "timestamp_timeout = 1440"
      ]
    }
  },
  "vvm-rb": {
    "version": "latest",
    "opts": [
      "--enable-multibyte",
      "--with-features=huge",
      "--enable-fontset",
      "--disable-selinux",
      "--enable-pythoninterp",
      "--enable-rubyinterp",
      "--enable-xim",
      "--enable-luainterp",
      "--with-lua-prefix=/usr"
    ]
  },
  "sysv-rc-conf": {
    "off": [
      "bluetooth",
      "dns-clean",
      "pppd-dns",
      "speech-dispatcher",
      "usplash",
      "saned"
    ]
  }
}
