{
  "run_list": ["role[dev]"],
  "platform": "ubuntu",
  "user": "yuu",
  "tz": "Asia/Tokyo",
  "rbenv": {
    "install_pkgs": ["libssl-dev", "git-core", "grep"],
    "user_home_root": "/home",
    "plugins": [
      {
        "name": "ruby-build",
        "git_url": "https://github.com/sstephenson/ruby-build.git"
      },
      {
        "name": "rbenv-gem-rehash",
        "git_url": "https://github.com/sstephenson/rbenv-gem-rehash.git"
      },
      {
        "name": "rbenv-default-gems",
        "git_url": "https://github.com/sstephenson/rbenv-default-gems.git"
      },
      {
        "name": "rbenv-binstubs",
        "git_url": "https://github.com/ianheggie/rbenv-binstubs.git"
      },
      {
        "name": "rbenv-ctags",
        "git_url": "https://github.com/tpope/rbenv-ctags.git"
      }
    ],
    "user_installs": [
      {
        "user": "yuu",
        "rubies": ["2.1.1"],
        "global": "2.1.1",
        "gems": {
          "2.1.1": [
            { "name": "bundler" },
            { "name": "rubygems-update" },
            { "name": "pry" },
            { "name": "tmuxinator" },
            { "name": "vvm-rb" },
            { "name": "refe2" }
          ]
        }
      }
    ]
  },
  "readline": {
    "packages": ["libreadline-dev", "libreadline5"]
  },
  "authorization": {
    "sudo": {
      "groups": ["yuu"],
      "users": ["yuu"],
      "passwordless": "true"
    }
  }
}
