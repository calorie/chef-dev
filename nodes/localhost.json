{
  "run_list": ["role[dev]"],
  "platform": "ubuntu",
  "user": "yuu",
  "tz": "Asia/Tokyo",
  "rbenv": {
    "install_pkgs": ["libssl-dev", "git-core", "grep"],
    "user_home_root": "/home",
    "rubies": ["2.1.1"],
    "global": "2.1.1",
    "gems": {
      "2.1.1": [
        { "name": "bundler" }
      ]
    }
  },
  "ruby_build": {
    "upgrade": "sync"
  },
  "readline": {
    "packages": ["libreadline-dev", "libreadline5"]
  },
  "authorization": {
    "sudo": {
      "groups": ["yuu"],
      "users": ["yuu"],
      "passwordless": "true"
    }
  }
}
